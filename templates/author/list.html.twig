Nombre auteur:{{author|length}}
{%if author is defined and author|length>0 %}
<table border="3">
    <tr>
        <td>id</td>
        <td>picture</td>
        <td>username</td>
        <td>email</td>
        <td>nb_books</td>
    </tr>
    {% set total = 0 %}
    {% for i in author %}
    <tr>
        <td>{{i.id}}</td>
        <td><img src="{{asset(i.picture)}}",style =" width: 100 ; height=100"></td>
        <td>{{i.username|upper}}</td>
        <td>{{i.email}}</td>
        <td>{{i.nb_books}}</td>
        {% set total = total + i.nb_books %}
        <td><a href="{{path('showauthorbyid',{'id':i.id})}}">Details</a></td>
    </tr>
    {% endfor %}
</table>
{% else %}

<p>is empty</p>
{% endif %}
